						</executions>
					</plugin>
				</plugins>
			</build-->
		</profile>
		
		<!-- #################### LINUX X86 VERSION #################### -->
		<profile>
			<id>linux-x86</id>
			<activation>
				<os>
					<family>unix</family>
					<arch>i386</arch>
				</os>
			</activation>
			<properties>
				<assembly.name>linux-x86</assembly.name>
				<swt.group>org.eclipse.swt.gtk.linux</swt.group>
				<swt.artifact>x86</swt.artifact>
			</properties>
		</profile>
		
		<!-- #################### LINUX X86_64 VERSION #################### -->
		<profile>
			<id>linux-x86_64</id>
			<activation>
				<os>
					<family>unix</family>
					<arch>x86_64</arch>
				</os>
			</activation>
			<properties>
				<assembly.name>linux-x86_64</assembly.name>
				<swt.group>org.eclipse.swt.gtk.linux</swt.group>
				<swt.artifact>x86_64</swt.artifact>
			</properties>
		</profile>
		
		<!-- #################### LINUX PPC VERSION #################### -->
		<profile>
			<id>linux-ppc</id>
			<activation>
				<os>
					<family>unix</family>
					<arch>ppc</arch>
				</os>
			</activation>
			<properties>
				<assembly.name>linux-ppc</assembly.name>
				<swt.group>org.eclipse.swt.gtk.linux</swt.group>
				<swt.artifact>ppc</swt.artifact>
			</properties>
		</profile>
		
	</profiles>
</project>
